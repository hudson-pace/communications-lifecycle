@inherits LayoutComponentBase
@using System.Security.Claims

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <div class="top-row px-4">
            <CascadingAuthenticationState>
            <AuthorizeView>
                <Authorized>
                    @if (context.User.Identity is not null)
                    {
                        <span>@(context.User.Identity!.IsAuthenticated ? context.User.Identity.Name + ", " +
                                                    context.User.FindFirst(c => c.Type == ClaimTypes.Email)?.Value : "")</span>
                        <a href="Account/SignOut">Sign Out</a>
                    }
                    else
                    {
                        <span>Authentication error. User.Identity has not been set.</span>
                    }
                </Authorized>
                <NotAuthorized>
                    <a href="Account/SignIn">Sign In</a>
                </NotAuthorized>
            </AuthorizeView>
            </CascadingAuthenticationState>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
